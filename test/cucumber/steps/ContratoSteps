import pages.*
//import ga.contrato ***importar contrato
import steps.TestDataAndOperations


//cenario de cancelamento de contrato(controller)
Given(~'^o sistema tem um contrato com o jogador "([^"]*)" no periodo de "([^"]*)" ate "([^"]*)" no clube "([^"]*)" de valor "([^"]*)"$') { String name, dateBegin, dateEnd, club, val ->
	TestDataAndOperation.createContrato(name, dateBegin, dateEnd, club)
	contrato = Contrato.findWHere(contratado: name, data_Inicio: dateBegin, data_Termino: dateEnd, contratante: club, valor: val)
	assert contrato != null
}
When(~'^eu deleto o contrato de jogador "([^"]*)" no periodo de "([^"]*)" ate "([^"]*)" no clube "([^"]*)" de valor "([^"]*)"$') { String name, dateBegin, dateEnd, club, val ->
    contrato = Contrato.findWHere(contratado: name, data_Inicio: dateBegin, data_Termino: dateEnd, contratante: club, valor: val)
    TestDataAndOperations.removeContrato(contrato)
}
Then(~'^o contrato de jogador "([^"]*)" no periodo de "([^"]*)" ate "([^"]*)" no clube "([^"]*)" de valor "([^"]*)" e removido do sistema$') { String name, dateBegin, dateEnd, club, val ->
    contrato = Contrato.findWHere(contratado: name, data_Inicio: dateBegin, data_Termino: dateEnd, contratante: club, valor: val)
    assert contrato == null
}

//cenario de cancelamento de contrato(GUI)

Given(~'^eu estou na pagina de vizualizacao de contratos$') {->
    to ContratoPage
    at ContratoPage
}

Given(~'^tem o sistema tem apenas um contrato armazenado com o jogador "([^"]*)" no periodo de "([^"]*)" ate "([^"]*)" no clube "([^"]*)" de valor "([^"]*)"$') {String name, dateBegin, dateEnd, club, val->
	contrato = Contrato.findWHere(contratado: name, data_Inicio: dateBegin, data_Termino: dateEnd, contratante: club, valor: val)
	assert contrato.size() == 1
}

When(~'^eu dou um click para remover o contrato de jogador "([^"]*)" no periodo de "([^"]*)" ate "([^"]*)" no clube "([^"]*)" de valor "([^"]*)"$') { String status ->
	at ContratoPage
}

