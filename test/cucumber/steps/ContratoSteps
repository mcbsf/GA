import pages.*
//import ga.publication.Periodico ***importar contrato
import steps.TestDataAndOperations

Given(~'^o sistema tem um contrato com o jogador "([^"]*)" no periodo de "([^"]*)" ate "([^"]*)" salvo com nome "([^"]*)"$') { String name, dateBegin, dateEnd, fileName ->
	TestDataAndOperations.createContrato(name, dateBegin, dateEnd)
	contrato = Periodico.findWHere(name: "Carlos", dateBegin: "10/10/2010", dateEnd: "0/10/2016")
	assert contrato != null
}
When(~'^eu deleto o contrato de jogador "([^"]*)" no periodo de "([^"]*)" ate "([^"]*)"$') { String title ->
    //contrato = Periodico.findWHere(name: "Carlos", dateBegin: "10/10/2010", dateEnd: "0/10/2016")
    TestDataAndOperations.removeFromContrato(name, dateBegin, dateEnd)
}
Then(~'^the article "([^"]*)" is properly removed by the system$') { String title ->
    contrato = Periodico.findWHere(name: "Carlos", dateBegin: "10/10/2010", dateEnd: "0/10/2016")
    assert article == null
}